<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <VBox fx:id="panelLobby" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" styleClass="panelLobby" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <ProgressIndicator prefHeight="25.0" prefWidth="25.0" />
                        <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="SALA DE ESPERA" textFill="WHITE" />
                    </children>
                </HBox>

                <TextArea fx:id="txtAreaLobby" editable="false" prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-background: transparent; -fx-text-box-border: transparent; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-text-fill: white; -fx-font-size: 18px;" />

                <Label style="-fx-font-size: 14px; -fx-font-style: italic;" text="El juego comenzará automáticamente cuando la sala esté llena." textFill="LIGHTGRAY" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>

        <VBox fx:id="panelJuego" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="panelJuego" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label fx:id="lblTurno" alignment="CENTER" style="-fx-font-size: 18px;" text="Label" textFill="WHITE" />
                        <Label fx:id="lblEstadoPozo" text="Label" textFill="WHITE" />
                        <Label fx:id="lblMensajes" text="Label" textFill="WHITE" />
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="btnFlechaIzquierda" mnemonicParsing="false" onAction="#clickFlechaIzquierda" text="&lt;-" />
                        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" style="-fx-background: transparent; -fx-background-color: transparent;" vbarPolicy="NEVER" HBox.hgrow="ALWAYS">
                            <content>
                                <HBox fx:id="contenedorMesa" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" />
                            </content>
                        </ScrollPane>
                        <Button fx:id="btnFlechaDerecha" mnemonicParsing="false" onAction="#clickFlechaDerecha" text="-&gt;" />
                    </children>
                </HBox>
                <HBox fx:id="contenedorMano" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" />
                <Button fx:id="btnPasar" mnemonicParsing="false" onAction="#accionPasar" text="Pasar Turno" />
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>

        <VBox fx:id="panelResultados" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <Label fx:id="lblTituloResultado" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Label" textAlignment="CENTER" textFill="WHITE" wrapText="true" />

                <HBox alignment="TOP_CENTER" spacing="50.0">
                    <children>
                        <VBox alignment="TOP_CENTER" spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="PUNTAJES" textFill="#00ffff" />
                                <TextArea fx:id="listaPuntajes" editable="false" prefHeight="140.0" prefWidth="200.0" style="-fx-control-inner-background: transparent; -fx-background-color: transparent; -fx-background: transparent; -fx-text-box-border: transparent; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-text-fill: white; -fx-font-size: 15px;" />
                            </children>
                        </VBox>

                        <VBox fx:id="cajaTop5" alignment="TOP_CENTER" spacing="5.0">
                            <children>
                                <Label alignment="TOP_LEFT" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="TOP 5 HISTÓRICO" textFill="#00ffff" />
                                <Label fx:id="lblRankingTop5" style="-fx-font-size: 15px;" text="Label" textAlignment="CENTER" textFill="WHITE" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnContinuarRonda" mnemonicParsing="false" text="Continuar" visible="false" />
                        <Button fx:id="btnNuevaPartida" mnemonicParsing="false" text="Nueva Partida" visible="false" />
                        <Button fx:id="btnSalir" mnemonicParsing="false" text="Salir" visible="false" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>

    </children>
</AnchorPane>
